{
  "name": "daisy2",
  "version": "1.0.0",
  "description": "A web-based voice AI assistant powered by Claude Code with browser-native speech recognition and text-to-speech.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:browser": "playwright test",
    "test:e2e": "playwright test tests/e2e/",
    "lint": "eslint web/ --ext .js",
    "lint:fix": "eslint web/ --ext .js --fix",
    "dev": "python -m src.api.server",
    "build:css": "tailwindcss -i ./web/src/input.css -o ./web/static/css/output.css --minify",
    "watch:css": "tailwindcss -i ./web/src/input.css -o ./web/static/css/output.css --watch",
    "dev:full": "npm run watch:css & npm run dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@picovoice/porcupine-web": "^3.0.3",
    "@picovoice/web-voice-processor": "^4.0.9",
    "@xenova/transformers": "^2.17.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/typography": "^0.5.19",
    "daisyui": "^5.5.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^3.4.15"
  }
}
